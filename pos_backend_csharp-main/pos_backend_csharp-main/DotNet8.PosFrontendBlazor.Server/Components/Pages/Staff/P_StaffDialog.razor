@using DotNet8.PosFrontendBlazor.Server.Models.Custom
@if(_reqModel is not null)
{
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
                New Staff
            </MudText>
        </TitleContent>
        <DialogContent>
            @* <MudTextField @bind-Value="@reqModel.StaffCode" Label="StaffCode" /> *@
            <MudTextField @bind-Value="@_reqModel.StaffName" Label="StaffName" />
            <MudDatePicker PickerVariant="PickerVariant.Dialog" Label="Date Of Birth" @bind-Date="_reqModel.DateOfBirth" DateFormat="dd/MM/yyyy" />
            @* <MudTextField @bind-Value="@reqModel.DateOfBirth" Label="DateOfBirth" /> *@
            <MudTextField @bind-Value="@_reqModel.MobileNo" Label="MobileNo" />
            <MudTextField @bind-Value="@_reqModel.Address" Label="Address" />
            <MudSelect @bind-Value="@_reqModel.Gender" Label="Please choose Gender" Variant="MudBlazor.Variant.Text">
                @*  <MudSelectItem Value="@("Male")" />
            <MudSelectItem Value="@("Female")" />
            <MudSelectItem Value="@("Other")" /> *@

                @foreach (var item in StaticData.Gender())
                {
                    <MudSelectItem Value="@(item.Key)">@item.Value</MudSelectItem>
                }
            </MudSelect>
            <MudTextField @bind-Value="@_reqModel.Position" Label="Position" />
            <MudTextField InputType=InputType.Password @bind-Value="@_reqModel.Password" Label="Password" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            @if (_staffId == 0)
            {
                <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
            }
            else
            {
                <MudButton Color="Color.Success" OnClick="SaveAsync">Update</MudButton>
            }
        </DialogActions>
    </MudDialog>
}