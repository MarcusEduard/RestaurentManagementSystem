@using DotNet8.PosFrontendBlazor.Models.Tax

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="requestModel.FromAmount" Label="From Amount" Variant="MudBlazor.Variant.Text" InputType="InputType.Number"></MudTextField>
        <MudTextField @bind-Value="requestModel.ToAmount" Label="To Amount" Variant="MudBlazor.Variant.Text" InputType="InputType.Number"></MudTextField>
        <MudSelect @bind-Value="requestModel.TaxType" Label="Choose Tax Type" Variant="MudBlazor.Variant.Text" TextChanged="TaxTypeChanged">
            @foreach (var taxType in StaticData.TaxType())
            {
                <MudSelectItem Value="@taxType.Key">@taxType.Value</MudSelectItem>
            }
        </MudSelect>
        @if (showPercentageField)
        {
            <MudTextField @bind-Value="requestModel.Percentage" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Percent" AdornmentColor="Color.Warning" Label="Percentage" Variant="MudBlazor.Variant.Text" InputType="InputType.Number"></MudTextField>
        }

        @if (showFixedAmountField)
        {
            <MudTextField @bind-Value="requestModel.FixedAmount" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" AdornmentColor="Color.Warning" Label="Fixed Amount" Variant="MudBlazor.Variant.Text" InputType="InputType.Number"></MudTextField>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>