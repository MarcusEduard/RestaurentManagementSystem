@if (model is null)
{
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
                New State
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudTextField @bind-Value="@reqModel.StateName" Label="State Name" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
        </DialogActions>
    </MudDialog>
}
else
{
    <MudDialog>
        <DialogContent>
            <MudTextField @bind-Value="@model.StateName" Label="State Name" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="EditAsync">Edit</MudButton>
        </DialogActions>
    </MudDialog>
}