<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Shop
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@requestModel.ShopCode" Label="Shop Code" />
        <MudTextField @bind-Value="@requestModel.ShopName" Label="Shop Name" />
        <MudTextField @bind-Value="@requestModel.MobileNo" Label="Mobile Number" />
        <MudTextField @bind-Value="@requestModel.Address" Label="Address" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>
