<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddCircle" Class="mr-3 mb-n1" />
            New Product
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="requestModel.ProductName" Label="Product Name" />
        @if (categoryResponseModel is not null)
        {
            <MudSelect @bind-Value="requestModel.ProductCategoryCode" Label="Choose Product Category" Variant="MudBlazor.Variant.Text">
                @foreach (var item in categoryResponseModel.Data.ProductCategory)
                {
                    <MudSelectItem Value="@item.ProductCategoryCode">@item.ProductCategoryName</MudSelectItem>
                }
            </MudSelect>
        }
        else
        {
            <MudTextField @bind-Value="requestModel.ProductCategoryCode" Label="Product Category Code" />
        }
        <MudTextField @bind-Value="@requestModel.Price" Label="Price" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
    </DialogActions>
</MudDialog>