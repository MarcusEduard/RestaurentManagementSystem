@if (model is null)
{
    <MudDialog>
        <DialogContent>
            <MudSelect T="string" Label="State Name" AnchorOrigin="Origin.BottomCenter" @bind-Value="@reqModel.StateCode">
                @foreach (var item in lstStateCode.Data.State)
                {
                    <MudSelectItem Value="@item.StateCode">@item.StateName</MudSelectItem>
                }
            </MudSelect>
            <MudTextField @bind-Value="@reqModel.TownshipName" Label="Township Name" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Success" OnClick="SaveAsync">Save</MudButton>
        </DialogActions>
    </MudDialog>
}
else
{
    <MudDialog>
        <DialogContent>
            <MudSelect T="string" Label="State Code" AnchorOrigin="Origin.BottomCenter" @bind-Value="@model.StateCode" @bind-Text="@model.StateName">
                @foreach (var item in lstStateCode.Data.State)
                {
                    <MudSelectItem Value="@item.StateCode">@item.StateName</MudSelectItem>
                }
            </MudSelect>
            <MudTextField @bind-Value="@model.TownshipName" Label="Township Name" />
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Secondary" OnClick="EditAsync">Edit</MudButton>
        </DialogActions>
    </MudDialog>
}